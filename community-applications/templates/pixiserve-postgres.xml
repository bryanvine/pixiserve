<?xml version="1.0"?>
<Container version="2">
  <Name>Pixiserve-PostgreSQL</Name>
  <Repository>postgres:16-alpine</Repository>
  <Registry>https://hub.docker.com/_/postgres</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>bash</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/pixiserve/pixiserve/issues</Support>
  <Project>https://github.com/pixiserve/pixiserve</Project>
  <Overview>
PostgreSQL database for Pixiserve photo management system.

This is a companion container for Pixiserve. It provides the PostgreSQL database required for storing user data, photo metadata, and ML results.
  </Overview>
  <Category>Tools:Utilities</Category>
  <WebUI/>
  <TemplateURL>https://raw.githubusercontent.com/pixiserve/pixiserve/main/deploy/unraid/pixiserve-postgres.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/pixiserve/pixiserve/main/deploy/unraid/postgres-icon.png</Icon>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <DateInstalled/>
  <Requires>Used with Pixiserve</Requires>
  <Config Name="PostgreSQL Port" Target="5432" Default="5432" Mode="tcp" Description="PostgreSQL port (change if you have conflicts)" Type="Port" Display="advanced" Required="false" Mask="false">5432</Config>
  <Config Name="Data Storage" Target="/var/lib/postgresql/data" Default="/mnt/user/appdata/pixiserve/postgres" Mode="rw" Description="Path to store PostgreSQL data" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/pixiserve/postgres</Config>
  <Config Name="Database User" Target="POSTGRES_USER" Default="pixiserve" Mode="" Description="PostgreSQL username" Type="Variable" Display="always" Required="true" Mask="false">pixiserve</Config>
  <Config Name="Database Password" Target="POSTGRES_PASSWORD" Default="pixiserve" Mode="" Description="PostgreSQL password (CHANGE THIS!)" Type="Variable" Display="always" Required="true" Mask="true">pixiserve</Config>
  <Config Name="Database Name" Target="POSTGRES_DB" Default="pixiserve" Mode="" Description="PostgreSQL database name" Type="Variable" Display="always" Required="true" Mask="false">pixiserve</Config>
</Container>
