# ===========================================
# REQUIRED SETTINGS
# ===========================================

# Secret key for JWT signing (generate with: openssl rand -hex 32)
SECRET_KEY=change-me-to-a-random-64-char-hex-string

# PostgreSQL credentials
POSTGRES_USER=pixiserve
POSTGRES_PASSWORD=change-me-secure-password
POSTGRES_DB=pixiserve

# ===========================================
# STORAGE CONFIGURATION
# ===========================================

# Storage type: 'local' or 's3'
STORAGE_TYPE=local

# Local storage path (inside container)
STORAGE_PATH=/data/photos

# S3 settings (only if STORAGE_TYPE=s3)
# S3_ENDPOINT=http://minio:9000
# S3_ACCESS_KEY=minioadmin
# S3_SECRET_KEY=minioadmin
# S3_BUCKET=pixiserve

# ===========================================
# NETWORKING
# ===========================================

# API port
API_PORT=8000

# CORS origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ===========================================
# REGISTRATION
# ===========================================

# Allow new user registration (set to false after creating admin)
ALLOW_REGISTRATION=true

# ===========================================
# DEVELOPMENT
# ===========================================

# Enable debug mode
DEBUG=false
